{{yield}}
{{#if editQuestionForm}}
  <span class="question-title"><h3>Edit question</h3></span>
    <form>
      <div class="container">
        <div class="form-group">
          <label for="author"></label>
          {{input value=author id="author" class="form-control" placeholder="Enter your name"}}
        </div>

        <div class="form-group">
          <label for="title"></label>
          {{input value=title id="title" class="form-control" placeholder="Enter your question"}}
        </div>

        <div class="form-group">
          <label for="description"></label>
          {{textarea value=description class="form-control" rows="5" placeholder="Additional details"}}
        </div>
      </div>

      <button class="btn btn-danger" {{action 'update' question}}>Submit</button>
  </form>
<br>
{{else}}
  <button class="btn btn-danger btn-xs" {{action 'editQuestionForm' question}}>Edit Question</button>
{{/if}}
